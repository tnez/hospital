<%= form_for [@patient, @prescription] do |f| %>
  <!-- possible error messages -->
  <% if @prescription.errors.any? %>
    <ul class="error-list">
      <% @prescription.errors.full_messages.each do |error_message| %>
        <li class="error-item">
          <%= error_message %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <!-- form -->
  <div class="form-group">
    <%= f.label :medication %>
    <%= f.text_field :medication %>
  </div>
  <div class="form-group">
    <%= link_to "Cancel", :back %> | <%= f.submit %>
  </div>
<% end %>
